<%- include('includes/head.ejs') %> <%- include('includes/nav.ejs') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-3">
      <h1 class="text-center">Criar conta ou Entrar</h1>
      <p class="text-center lead">Crie sua conta ou faça login abaixo:</p>
      <div class="row text-center">
        <div class="col-lg my-3">
          <h4>Faça seu cadastro</h4>
          <p>Se você ainda não tem uma conta, preencha o formulário abaixo:</p>
          <form action="/login/register" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrf %>">
            <div class="mb-3 form-group">
              <label class="form-label"
                >Seu e-mail</label
              >
              <input
                type="email"
                class="form-control"
                name="email"
              />
            </div>
            <div class="mb-3 form-group">
              <label class="form-label"
                >Sua senha</label
              >
              <input
                type="password"
                class="form-control"
                name="senha"
              />
            </div>
            <button type="submit" class="btn btn-primary">Criar minha conta</button>
          </form>
        </div>

        <div class="col-lg my-3">
          <h4>Faça seu login</h4>
          <p class="mt-4">Se você já tem uma conta, faça o login abaixo:</p>
          <form action="/login/login" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrf %>">
            <div class="form-group my-4">
              <label class="form-label "
                >Seu e-mail</label
              >
              <input
                type="email"
                class="form-control"
                name="email"
              />
            </div>
            <div class="form-group">
              <label class="form-label mb-0"
                >Sua senha</label
              >
              <input
                type="password"
                class="form-control mb-2"
                name="senha"
              />
            </div>
            <button type="submit" class="btn btn-primary mt-2">Entrar</button>
          </form>
        </div>
      </div>
    </div>
    <div class="col-lg-2"></div>
  </div>
</div>
<%- include('includes/footer.ejs') %>
